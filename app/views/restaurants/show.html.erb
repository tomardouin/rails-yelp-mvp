<div class="container py-5">
    <h1> <%= @restaurant.name %> </h1>

    <p> <%= @restaurant.address %> </p>
    <p> <%= @restaurant.phone_number %> </p>
    <p> <%= @restaurant.category.capitalize %> </p>

    <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class:"btn btn-primary" %>

    <p class="pt-3"><strong>Reviews</strong></p>
    <ul class="list-group border-bottom">
        <% @restaurant.reviews.each do |review| %>
            <li class="list-group-item">
                <%= review.content%> |
                <%= review.rating%> sur 5 |
                <%= link_to "Delete the review", review_path(review), 
                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </li>
        <% end %>
    </ul>

    <%= link_to "All restaurants", restaurants_path, class:"btn btn-primary mt-3" %>
</div>